@{
    ViewBag.Title = "Gerenciar Representações";
    Layout = "_Layout";
}

@section Scripts {
    <script type="text/javascript" src="~/lib/bootbox/bootbox.min.js"></script>
    <script type="text/javascript" src="~/js/gerenciar/representacao/index.js"></script>
}

<!-- Card titulo pagina -->
<div class="card-title">
    <div class="card-title-container" style="text-align: center;">
        <h4>
            <b>SCR - Gerenciar Representações</b>
        </h4>
    </div>
</div>
<!-- Fim card titulo pagina -->

<div class="fieldset-card">
    <div class="fieldset-card-legend" style="width: 200px;">Filtragem de Representações</div>

    <div class="fieldset-card-container">
        <div class="row">
            <div class="col-sm-8">
                <label for="txFiltro">Filtro:</label>
                <input type="text" id="txFiltro" class="form-control input-sm" style="width: 100%;" placeholder="Filtrar por nome e email..." />
            </div>
            
            <div class="col-sm-2">
                <label for="dtFiltroCad">Filtro Cadastro:</label>
                <input type="date" id="dtFiltroCad" class="form-control input-sm" style="width: 100%;" />
            </div>

            <div class="col-sm-2">
                <label for="btFiltrar">&nbsp;</label>
                <button id="btFiltrar" class="btn btn-primary btn-sm" style="width: 100%;">FILTRAR</button>
            </div>
        </div>
    </div>
</div>

<div class="fieldset-card" style="margin-bottom: 40px;">
    <div class="fieldset-card-legend" style="width: 200px;">Representações Cadastradas</div>

    <div class="fieldset-card-container">
        <div class="row" style="margin-bottom: 10px;">
            <div class="col-sm-12">
                <label for="cbord">Ordenar por:</label>
                <select id="cbord" class="form-control input-sm">
                    <option value="1">REGISTRO (CRESCENTE)</option>
                    <option value="2">REGISTRO (DECRESCENTE)</option>
                    <option value="3">NOME FANTASIA (CRESCENTE)</option>
                    <option value="4">NOME FANTASIA (DECRESCENTE)</option>
                    <option value="5">CNPJ (CRESCENTE)</option>
                    <option value="6">CNPJ (DECRESCENTE)</option>
                    <option value="7">CADASTRO (CRESCENTE)</option>
                    <option value="8">CADASTRO (DECRESCENTE)</option>
                    <option value="9">UNIDADE (CRESCENTE)</option>
                    <option value="10">UNIDADE (DECRESCENTE)</option>
                    <option value="11">EMAIL (CRESCENTE)</option>
                    <option value="12">EMAIL (DECRESCENTE)</option>
                </select>
            </div>
        </div>
        
        <table id="tbRepresentacoes" class="table table-responsive" style="width: 100%;">
            <thead>
            <tr>
                <th class="hidden">ID</th>
                <th style="width: 40%;">NOME FANTASIA</th>
                <th style="width: 16%;">CNPJ</th>
                <th style="width: 10%;">CADASTRO</th>
                <th style="width: 10%;">UNIDADE</th>
                <th>EMAIL</th>
            </tr>
            </thead>
        
            <tbody id="tbRepresentacoesBody">
            </tbody>
        </table>
    </div>
</div>

<div class="panel-actions">
    <div class="row">
        <div class="col-sm-3">
            <button id="btVoltar" class="btn btn-default btn-sm" style="width: 100%;">VOLTAR</button>
        </div>

        <div class="col-sm-3">
            <button id="btExcluir" class="btn btn-danger btn-sm" style="width: 100%;">EXCLUIR</button>
        </div>

        <div class="col-sm-3">
            <button id="btDetalhes" class="btn btn-info btn-sm" style="width: 100%;">DETALHES</button>
        </div>

        <div class="col-sm-3">
            <button id="btNovo" class="btn btn-success btn-sm" style="width: 100%;">NOVO</button>
        </div>
    </div>
</div>